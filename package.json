{
  "name": "win-screenshot-app",
  "version": "1.0.0",
  "description": "A Windows application that takes screenshots at regular intervals.",
  "main": "dist/main.js",
  "scripts": {
    "start": "npm run build && npm run start-background",
    "start-background": "npx electron dist/main.js --background",
    "start-dev": "npm run build && npx electron dist/main.js --dev",
    "start-foreground": "npm run build && npx electron dist/main.js --foreground",
    "dev": "ts-node --project tsconfig.json --files src/main.ts --dev",
    "build": "tsc",
    "electron": "electron dist/main.js",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "auto-launch": "^5.0.6",
    "electron": "^28.3.3",
    "fs-extra": "^11.0.0",
    "get-windows": "^9.2.0",
    "sharp": "^0.34.3",
    "sqlite3": "^5.1.7",
    "tesseract.js": "^2.1.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "author": "Your Name",
  "license": "MIT"
}
